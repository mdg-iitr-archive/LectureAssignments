<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_album_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="8dp"
        android:src="@drawable/shape_of_you"
        />


    <LinearLayout
        android:id="@+id/llPlayControls"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_button_play"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/play_icon" />

        <ImageView
            android:id="@+id/notification_button_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pause_icon" />

        <ImageView
            android:id="@+id/notification_button_stop"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/stop_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/notification_album_image"
        android:layout_toEndOf="@+id/notification_album_image">
        <TextView
            android:textColor="#212121"
            android:id="@+id/notification_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shape of You"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="#212121"
            android:id="@+id/notification_text_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ed Sheeran"
            />

    </LinearLayout>


</RelativeLayout>